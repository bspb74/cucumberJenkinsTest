pipeline {
    agent {
        label 'ec2'
    }

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git url: 'https://github.com/bspb74/cucumberJenkinsTest.git', credentialsId: '92528f87-03ae-4b76-9521-8fe1ce5b006b', branch: 'email_testing'
                // Run Maven on a Unix agent.
                sh "mvn verify -Dbrowser=chrome -Dheadless=true -Dskip.surefire.tests=false -Dhudson.model.DirectoryBrowserSupport.CSP="
            }
        }
        //stage('Archive') {
        //    steps {
        //        zip zipFile: 'testRslts.zip', archive: false, dir: 'target'
        //    }
        //}
    }
    post {
        failure {
            emailext body: 'TEST FAILED',
                subject: "${currentBuild.currentResult}: ${env.JOB_NAME} - build ${currentBuild.number}",
                to: "bspb74@gmail.com",
                from: "bspb74@gmail.com",
                mimeType: "text/html"
                archiveArtifacts artifacts: 'target/cucumber-html-reports/cucumberHtmlReport.html', fingerprint: true
            }
        success {
            emailext body: 'TEST PASSED',
                subject: "${currentBuild.currentResult}: ${env.JOB_NAME} - build ${currentBuild.number}",
                to: "bspb74@gmail.com",
                from: "bspb74@gmail.com",
                mimeType: "text/html"
                archiveArtifacts artifacts: 'target/cucumber-html-reports/cucumberHtmlReport.html', fingerprint: true
            }

    }
}