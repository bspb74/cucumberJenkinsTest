        failure {
            mail body: '$DEFAULT_CONTENT',
                subject: '$DEFAULT_SUBJECT',
                to: "bspb74@gmail.com",
                from: "bspb74@gmail.com"
                archiveArtifacts artifacts: '$WORKSPACE/target/cucumber-html-reports/cucumberHtmlReport.html', fingerprint: true
            }
        success {
            mail body: '$DEFAULT_CONTENT',
                subject: '$DEFAULT_SUBJECT',
                to: "bspb74@gmail.com",
